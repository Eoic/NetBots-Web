<nav class="menu">
    <label for="menu-toggle">
        <span></span>
        <span></span>
        <span></span>
    </label>
    
    <input type="checkbox" id="menu-toggle">

    <ul>
        <%= for {item, index} <- Enum.with_index(menu_items()) do %>
        <li><a href="#"><%= item %></a></li>
            <%= if index < (length menu_items()) - 1 do %>
                <li class="separator">/</li>
            <% end %>
        <% end %>
    </ul>
</nav>
